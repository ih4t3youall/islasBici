<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
          http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="jIslasJBiciE4">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>jIslas.model.Sexo</class>
		<class>jIslas.model.Persona</class>
		<class>jIslas.model.Administrador</class>
		<class>jIslas.model.Usuario</class>
		<class>jIslas.model.Alquiler</class>
		<class>jIslas.model.Bicicleta</class>
		<class>jIslas.model.Estacion</class>
		<class>jIslas.model.EstadoBicicleta</class>
		<class>jIslas.model.EstadoEstacion</class>
		<class>jIslas.model.Usuario</class>
		<class>jIslas.model.RegistroBicicleta</class>
		<class>jIslas.model.RegistroEstacion</class>
		<class>jIslas.model.RegistroUsuario</class>	
		<class>jIslas.model.LogAuditoria</class>		
		
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="root" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/jbici" />
			<property name="hibernate.default_schema" value="jbici" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.hbm2ddl.auto"	value="update" /> 
		</properties>
	</persistence-unit>
</persistence>
