<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	<application>
		<locale-config>
			<default-locale>es</default-locale>
		</locale-config>
	</application>
	<converter>
		<converter-for-class>jIslas.model.Sexo</converter-for-class>
		<converter-class>javax.faces.convert.EnumConverter</converter-class>
	</converter>
	<validator>
		<validator-id>noRepetido</validator-id>
		<validator-class>validatorsUI.NoRepetidoValidator</validator-class>
	</validator>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/errorGeneral.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>admin</from-outcome>
			<to-view-id>/adminPages/adminHome.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>usuario</from-outcome>
			<to-view-id>/userHome.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>modificarBicicleta</from-outcome>
			<to-view-id>/adminPages/modificarBicicleta.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>administrarBicicletas</from-outcome>
			<to-view-id>/adminPages/administrarBicicletas.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>administrarUsuarios</from-outcome>
			<to-view-id>/adminPages/administrarUsuarios.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>administrarEstacion</from-outcome>
			<to-view-id>/adminPages/administrarEstacion.xhtml</to-view-id>
		</navigation-case>		
	</navigation-rule>	
</faces-config>
